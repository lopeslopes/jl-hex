\begin_body

\begin_layout Standard
\begin_inset Formula 
\[
\vec{a}_{1}=a\begin{pmatrix}\frac{\sqrt{3}}{2}\\
\frac{1}{2}
\end{pmatrix}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\vec{a}_{2}=a\begin{pmatrix}\frac{\sqrt{3}}{2}\\
-\frac{1}{2}
\end{pmatrix}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\vec{d}=\frac{1}{3}\left(\vec{a}_{1}+\vec{a}_{2}\right)=\frac{a}{3}\begin{pmatrix}\sqrt{3}\\
0
\end{pmatrix}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\vec{r}_{B}=m\vec{a}_{1}+\vec{d}+3n\vec{d}=am\begin{pmatrix}\frac{\sqrt{3}}{2}\\
\frac{1}{2}
\end{pmatrix}+\frac{a}{3}\begin{pmatrix}\sqrt{3}\\
0
\end{pmatrix}+\frac{3na}{3}\begin{pmatrix}\sqrt{3}\\
0
\end{pmatrix}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\vec{r}_{B}=a\left[m\begin{pmatrix}\frac{\sqrt{3}}{2}\\
\frac{1}{2}
\end{pmatrix}+\frac{1}{3}\begin{pmatrix}\sqrt{3}\\
0
\end{pmatrix}+n\begin{pmatrix}\sqrt{3}\\
0
\end{pmatrix}\right]=a\begin{pmatrix}m\frac{\sqrt{3}}{2}+\frac{\sqrt{3}}{3}+n\sqrt{3}\\
m\frac{1}{2}
\end{pmatrix}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left|\vec{r}_{B}\right|=a\sqrt{\left(m\frac{\sqrt{3}}{2}+\frac{\sqrt{3}}{3}+n\sqrt{3}\right)^{2}+\left(m\frac{1}{2}\right)^{2}}=a\sqrt{m^{2}+3n^{2}+3mn+m+2n+\frac{1}{3}}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\vec{r}_{A}=3l\vec{d}=\frac{3la}{3}\begin{pmatrix}\sqrt{3}\\
0
\end{pmatrix}=\begin{pmatrix}la\sqrt{3}\\
0
\end{pmatrix}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left|\vec{r}_{A}\right|=la\sqrt{3}
\]

\end_inset


\end_layout

\begin_layout Standard
Condição:
 achar 
\begin_inset Formula $l$
\end_inset

,
 
\begin_inset Formula $m$
\end_inset

 e 
\begin_inset Formula $n$
\end_inset

 de forma que 
\begin_inset Formula $\left|\vec{r}_{A}\right|=\left|\vec{r}_{B}\right|$
\end_inset

.
 Depois,
 obter posições usando os índices encontrados e gerar o ângulo entre os vetores.
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left|\vec{r}_{A}\right|=\left|\vec{r}_{B}\right|
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
la\sqrt{3}=a\sqrt{m^{2}+3n^{2}+3mn+m+2n+\frac{1}{3}}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
l=\sqrt{\frac{m^{2}+3n^{2}+3mn+m+2n+\frac{1}{3}}{3}}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
l=\sqrt{\frac{m^{2}}{3}+n^{2}+mn+\frac{m}{3}+\frac{2n}{3}+\frac{1}{9}}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
3l^{2}=m^{2}+3n^{2}+3mn+m+2n+\frac{1}{3}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
m^{2}+3n^{2}+3mn+m+2n+\frac{1}{3}-3l^{2}=0
\]

\end_inset


\end_layout

